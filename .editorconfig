# 프로젝트 루트 설정
root = true

# 모든 Kotlin 파일에 적용
[*.{kt,kts}]
# 인덴트 스타일 및 크기
indent_style = space
indent_size = 4

# 한 줄 최대 길이 (필요 시 조절)
max_line_length = 120

# 문장 끝 공백 제거 및 파일 끝 새 줄 추가
insert_final_newline = true
trim_trailing_whitespace = true

#### KtLint 규칙 (ktlint 1.0.0 이상) ####

# Compose 대문자 함수명 허용
ktlint_function_naming_ignore_when_annotated_with = Composable

# 패키지명 규칙 완화 (ui/Route 등 허용)
ktlint_standard_package-name = disabled

# 클래스명 규칙 (이미 Kotlin 규칙 준수)
ktlint_standard_class-naming = disabled

# 함수명 규칙 (Compose 함수 등)
ktlint_standard_function-naming = disabled

# 속성명 규칙
ktlint_standard_property-naming = disabled

# 상수명 규칙 (SCREAMING_SNAKE_CASE 완화)
ktlint_standard_constant-naming = disabled

# ★ 주석 위치 규칙 - 비활성화
# 함수 인자 옆 주석 허용 (예: someFunction(arg, /* comment */ arg2))
ktlint_standard_comment-wrapping = disabled

# 임포트 순서 (주석이 있어도 무시)
ktlint_standard_import-ordering = disabled

# 라인 길이 완화
ktlint_standard_max-line-length = disabled

# 와일드카드 임포트 금지 (유지)
ktlint_standard_no-wildcard-imports = enabled